include ./common/_mixins
block variables

doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    meta(content="ie=edge" http-equiv="x-ua-compatible")
    meta(content="width=device-width, initial-scale=1" name="viewport")
    link(rel="apple-touch-icon", sizes="180x180", href="./assets/images/favicon/apple-touch-icon.png")
    link(rel="icon", type="image/png", sizes="32x32", href="./assets/images/favicon/favicon-32x32.png")
    link(rel="icon", type="image/png", sizes="16x16", href="./assets/images/favicon/favicon-16x16.png")
    link(rel="manifest", href="./assets/images/favicon/site.webmanifest")
    link(rel="mask-icon", href="./assets/images/favicon/safari-pinned-tab.svg", color="#232f47")
    meta(name="msapplication-TileColor", content="#232f47")
    meta(name="theme-color", content="#ffffff")
    meta(property='og:image' content='./assets/images/favicon/og-image.jpg')
    meta(property='og:image:width' content='279')
    meta(property='og:image:height' content='279')
    meta(property='og:url' content='http://gpi.fsb.ru/')
    meta(property='og:title' content='ГПИ ФСБ РОССИИ')
    meta(property='og:description' content='Официальный сайт Голицынского Пограничного института ФСБ России.')
    title #{title}
    link(rel='stylesheet' href='main.min.css')
  body
    .wrapper
      .wrap-navbar
        .container
          include ./common/navigator.pug
      .wrap-hero
        .container.container--hero
          include ./common/hero.pug
      .maincontent
        block content

      include ./common/footer.pug
    script(src='ie.js')  
    script(src='ie2.js')
    script(src='jquery.js')
    script(src='bootstrap.js')
